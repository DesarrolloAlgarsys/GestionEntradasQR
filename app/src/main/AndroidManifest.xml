<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.serarni.qre_ntradas">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".view.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustResize"></activity>

        <activity
            android:name=".view.MyPreferencesActivity"
            android:label="@string/preferences"
            android:theme="@style/AppTheme"></activity>
        <activity
            android:name=".view.ReactivateTicketActivity"
            android:label="@string/eventExitTitle"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity android:name=".view.EventsActivity"
            android:label="@string/my_events"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity android:name=".view.EventDetailActivity"
            android:label=""
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity android:name=".view.ClientsActivity"
            android:label="Asistentes"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
    </application>

</manifest>